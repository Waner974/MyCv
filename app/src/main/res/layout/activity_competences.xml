<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Competences">
    <ListView
        android:id="@+id/listviewCompetences"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:tint="@android:color/holo_blue_light"
        app:srcCompat="@drawable/competence_icon" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPETENCES"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="26dp" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DÃ©veloppement"
        android:layout_below="@+id/textView3"
        android:textColor="@android:color/holo_blue_light"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="15dp"
        />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="150dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="9dp"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/imageViewPhp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/php_icon" />
                <ProgressBar
                    android:id="@+id/horizontal_progress_barPhp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="80dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="12dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:minHeight="100dp"
                    android:progress="70"
                    android:progressBackgroundTint="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/imageViewJS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/js_icon" />

                <ProgressBar
                    android:id="@+id/horizontal_progress_barJs"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="80dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="12dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:minHeight="100dp"
                    android:progress="10"
                    android:progressBackgroundTint="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/imageViewJava"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/java_icon" />

                <ProgressBar
                    android:id="@+id/horizontal_progress_barJava"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="80dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="12dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:minHeight="100dp"
                    android:progress="80"
                    android:progressBackgroundTint="@color/colorPrimaryDark" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="9dp">

                <ImageView
                    android:id="@+id/imageViewOracle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/oracle_icon" />
                <ProgressBar
                    android:id="@+id/horizontal_progress_barOracle"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="80dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="12dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:minHeight="100dp"
                    android:progress="40"
                    android:progressBackgroundTint="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/imageViewMysql"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/mysql_icon" />

                <ProgressBar
                    android:id="@+id/horizontal_progress_barMysql"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="80dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="12dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:minHeight="100dp"
                    android:progress="50"
                    android:progressBackgroundTint="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/imageViewCsharp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/chsarp_icon" />

                <ProgressBar
                    android:id="@+id/horizontal_progress_barCsharp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="80dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="12dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:minHeight="100dp"
                    android:progress="20"
                    android:progressBackgroundTint="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:id="@+id/imageViewSymfony"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/symfony_icon" />
                <ProgressBar
                    android:id="@+id/horizontal_progress_barSymfony"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="80dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="12dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:minHeight="100dp"
                    android:progress="20"
                    android:progressBackgroundTint="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/imageViewReact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/react_icon" />

                <ProgressBar
                    android:id="@+id/horizontal_progress_barReact"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="80dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="12dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:minHeight="100dp"
                    android:progress="5"
                    android:progressBackgroundTint="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/imageViewAndroid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/android_icon" />

                <ProgressBar
                    android:id="@+id/horizontal_progress_barAndroid"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="80dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="12dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:minHeight="100dp"
                    android:progress="15"
                    android:progressBackgroundTint="@color/colorPrimaryDark" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>
